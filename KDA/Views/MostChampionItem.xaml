<UserControl x:Class="KDA.Views.MostChampionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KDA.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="251"
             Width="251" Height="50"
             Padding="0 5 0 5"
             >
    <StackPanel Orientation="Horizontal">
        <!-- 챔피언 이미지 -->
        <Ellipse 
            Width="35" 
            Height="35"
            Fill="Gray"
            >
            <!-- 챔피언 이미지 
           <Ellipse.Fill>
               
                <ImageBrush ImageSource="/Assets/logo.png"/>
            </Ellipse.Fill>
            -->

        </Ellipse>

        <StackPanel 
            Orientation="Vertical"
            Margin="8,2,0,0"
            >
            <TextBlock 
                Text="야스오"
                FontSize="13"
                FontWeight="Bold"
                Foreground="White"
                Height="18"

                />
            <TextBlock 
                Text="CS 231 (7.2)"
                FontSize="12"
                FontWeight="Regular"
                Foreground="#808080"
                Height="15"
                />
        </StackPanel>
        <StackPanel 
            Orientation="Vertical"
            Margin="9,2,0,0"
            >
            <TextBlock 
                TextAlignment="Center"
                Text="2.2:1 평점"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#C5C2C2"
                Height="18"

                />
            <TextBlock 
                TextAlignment="Center"
                Text="6.6 / 6.3 / 7.2"
                FontSize="11"
                FontWeight="Regular"
                Foreground="#808080"
                Height="15"
                />
        </StackPanel>
        <StackPanel 
            Orientation="Vertical"
            Margin="20,2,0,0"
            >
            <TextBlock 
                TextAlignment ="Right"
                Text="64%"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#FF3A3A"
                Height="18"

                />
            <TextBlock 
                TextAlignment ="Right"
                Text="11 게임"
                FontSize="12"
                FontWeight="Medium"
                Foreground="#808080"
                Height="15"
                />
        </StackPanel>
            


    </StackPanel>
</UserControl>
