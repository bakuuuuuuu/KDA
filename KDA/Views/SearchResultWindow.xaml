<Window x:Class="KDA.Views.SearchResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDA.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:KDA.ViewModels"
        xmlns:converters="clr-namespace:KDA.Converters"
        mc:Ignorable="d"
        Title="KDA"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MyBaseWindowStyle}">

    <Grid>
        <!--배경-->
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Background/mainbackground.png"
                        Stretch="UniformToFill" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--상단 영역(홈 버튼, 검색 바, 윈도우 컨트롤 버튼)-->
        <Grid Grid.Row="0">
            <!--홈 버튼-->
            <Button HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="110,0,0,0"
                Width="150"
                Height="60"
                BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/Logos/logo3.png"
                    Stretch="Uniform" />
                </Button.Background>
            </Button>

            <!--검색 바-->
            <local:SearchBar HorizontalAlignment="Center" 
                           VerticalAlignment="Center" Margin="130,0,0,0" />

            <!--윈도우 컨트롤 버튼-->
            <local:WindowControlButtons HorizontalAlignment="Right" 
                                      VerticalAlignment="Top" 
                                      Margin="0,5,10,0" />
        </Grid>

        <!--하단 영역(사용자 프로필, 모스트 챔피언, 최근 20게임 상세보기)-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--왼쪽 영역(사용자 프로필, 모스트 챔피언)-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!--사용자 프로필-->
                <local:UserProfileCard Grid.Row="0"
                                       Margin="68,0,27,10"
                                       DataContext="{Binding UserProfileInfo}"/>

                <!--모스트 챔피언-->
                <Border Grid.Row="1"
                        Background="#60000000" 
                        Margin="68,10,27,25" 
                        CornerRadius="5"/>
            </Grid>

            <!--오른쪽 영역(최근 20게임 상세보기)-->
            <Border Grid.Column="1"
                    Margin="10,0,20,20" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="130"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--상단 영역(원 그래프, 킬관여, 플레이한 챔피언 최근(20게임), 선호 포지션(랭크))-->
                    <Border Grid.Row="0" 
                            Background="#60000000" Margin="0,0,52,0"
                            CornerRadius="5"/>

                    <!--하단 영역(각 게임 상세 내역)-->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" Margin="0,0,52,5"
                                  Background="#60000000"/>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>