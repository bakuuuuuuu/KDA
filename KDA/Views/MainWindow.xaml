<Window x:Class="KDA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDA"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="KDA"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MyBaseWindowStyle}">

    <Grid>
        <!--화면 배경 설정-->
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Background/mainbackground.png"
                        Stretch="UniformToFill" />
        </Grid.Background>

        <!--창 조작 버튼들-->
        <local:WindowControlButtons HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,5,10,0"/>

        <!--로고와 검색바-->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,80,0,0">
            
            <!--화면 중앙 이미지-->
            <Image Source="/Resources/Logos/logo2.png"
                   Width="300"
                   Margin="0,0,0,30" />

            <!--검색바 컨테이너-->
            <local:SearchBar />
        </StackPanel>
    </Grid>
</Window>