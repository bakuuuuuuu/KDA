<UserControl x:Class="KDA.Views.PreferredPosition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KDA.Views"
             xmlns:models="clr-namespace:KDA.Models"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=models:PositionStats, IsDesignTimeCreatable=True}">

    <StackPanel>
        <TextBlock Text="선호 포지션 (랭크)" Foreground="#AAA" FontSize="15" Margin="0,0,0,5" HorizontalAlignment="Center" FontWeight="Bold"/>

        <!--부모로부터 받아온 선호 포지션 리스트를 사용하겠다고 선언-->
        <ItemsControl ItemsSource="{Binding}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                
                <!--포지션 UI 한 칸-->
                <DataTemplate>
                    <DataTemplate.Resources>
                        
                        <!--기본 막대 그래프 테두리 제거를 위해 막대 그래프 새로 디자인-->
                        <Style x:Key="CustomVerticalProgressBar" TargetType="ProgressBar">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Grid x:Name="TemplateRoot">
                                            <Border BorderBrush="#3D6B8C"
                                                    BorderThickness="1"
                                                    Background="Transparent"/>

                                            <Border x:Name="PART_Track" 
                                                    Margin="1">
                                                <Border x:Name="PART_Indicator" 
                                                        Background="{TemplateBinding Foreground}"
                                                        HorizontalAlignment="Left"/>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataTemplate.Resources>

                    <StackPanel HorizontalAlignment="Center">

                        <!--막대 그래프 그리는 부분-->
                        <ProgressBar Style="{StaticResource CustomVerticalProgressBar}"
                                     Value="0" Width="60"  
                                     Height="22" 
                                     Margin="5"
                                     Foreground="#5E82E1">
                            <ProgressBar.LayoutTransform>
                                
                                <!--세로 막대 그래프가 없어서 기본 막대 그래프를 각도 조정하여 만듦-->
                                <RotateTransform Angle="-90"/>
                            </ProgressBar.LayoutTransform>

                            <ProgressBar.Triggers>
                                
                                <!--로드 이벤트를 감지하여 애니메이션 실행-->
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            
                                            <!--0부터 PlayRate 값까지 부드럽게 채우는 애니메이션-->
                                            <DoubleAnimation Storyboard.TargetProperty="Value"
                                                             From="0" To="{Binding PlayRate}"
                                                             Duration="0:0:1">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ProgressBar.Triggers>
                        </ProgressBar>

                        <Image Source="{Binding IconPath}" 
                               Width="24" 
                               Height="24"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>