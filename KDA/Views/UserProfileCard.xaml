<UserControl x:Class="KDA.Views.UserProfileCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KDA.Views"
             xmlns:models="clr-namespace:KDA.Models"
             xmlns:converters="clr-namespace:KDA.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="265"
             d:DataContext="{d:DesignInstance Type=models:UserProfile, IsDesignTimeCreatable=True}">

    <!--승률 색상 컨버터-->
    <UserControl.Resources>
        <converters:WinRateToBrushConverter x:Key="WinRateToBrushConverter"/>
    </UserControl.Resources>

    <!--최상위 영역 스타일-->
    <Border CornerRadius="5"
            BorderBrush="#3D6B8C"
            BorderThickness="1">
        <Border.Background>
            <SolidColorBrush Color="#1A223F" Opacity="0.85"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--상단 영역-->
            <Grid Grid.Row="0" Margin="20,20,20,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--프로필 아이콘-->
                <Border Grid.Column="0" Width="60" Height="60" CornerRadius="25" BorderBrush="#3D6B8C" BorderThickness="1">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding IconPath}" />
                    </Border.Background>
                </Border>

                <!--닉네임, 태그, 국기, 랭킹-->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding UserName}" Foreground="White" FontSize="24" FontWeight="Bold" />
                        <TextBlock Text="{Binding UserTag}" Foreground="#777" FontSize="18" VerticalAlignment="Bottom" Margin="5,0,0,0" HorizontalAlignment="Left" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Image Source="{Binding FlagIconPath}" Width="16" Height="16" />
                        <TextBlock Text="{Binding RankInfo}" Foreground="#AAA" FontSize="11" VerticalAlignment="Center" Margin="2,0,0,0" Width="125" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!--하단 영역-->
            <Grid Grid.Row="1" Margin="20,17,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--전적 갱신 버튼-->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <Button Content="전적 갱신" Width="100" Height="39" HorizontalAlignment="Left" Background="#5E82E1" BorderBrush="#5E82E1" Foreground="White" />
                    <TextBlock Text="{Binding LastUpdated}" Foreground="#AAA" FontSize="11" HorizontalAlignment="Left" Margin="0,5,0,15" />
                </StackPanel>

                <!--티어, LP, 승/패, 승률-->
                <Grid Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0" Width="110" HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Tier}" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Lp, StringFormat={}{0} LP}" Foreground="White" FontSize="12" HorizontalAlignment="Left" Margin="0,5,0,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding WinLossRecord}" Foreground="#AAA" FontSize="12" HorizontalAlignment="Right" Margin="0,5,0,0"/>

                    <TextBlock Grid.Row="2" Grid.ColumnSpan="2" FontSize="12" HorizontalAlignment="Right" Margin="0,5,0,0">
                        <Run Text="승률" Foreground="#AAA"/>
                        <Run Text="{Binding WinRate, StringFormat={}{0}%}"
                            Foreground="{Binding WinRate, Converter={StaticResource WinRateToBrushConverter}}"/>
                    </TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>