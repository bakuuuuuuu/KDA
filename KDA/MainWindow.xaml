<Window x:Class="KDA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDA"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="KDA"
        Height="720"
        Width="1280"
        Icon="/Resources/logo2.png"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Grid>
        <!--화면 배경 설정-->
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/mainbackground.png"
                        Stretch="UniformToFill" />
        </Grid.Background>

        <!--창 조작 버튼들-->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
            <Button x:Name="MinimizeButton"
                    Click="MinimizeButton_Click"
                    Style="{StaticResource MaterialDesignToolButton}"
                    Foreground="White">
                <materialDesign:PackIcon Kind="WindowMinimize" />
            </Button>
            <Button x:Name="MaximizeButton"
                    Click="MaximizeButton_Click"
                    Style="{StaticResource MaterialDesignToolButton}"
                    Foreground="White">
                <materialDesign:PackIcon Kind="WindowMaximize" />
            </Button>
            <Button x:Name="CloseButton"
                    Click="CloseButton_Click"
                    Style="{StaticResource MaterialDesignToolButton}"
                    Foreground="White">
                <materialDesign:PackIcon Kind="Close" />
            </Button>
        </StackPanel>

        <!--로고와 검색바-->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,80,0,0">
            
            <!--화면 중앙 이미지-->
            <Image Source="/Resources/logo2.png"
                   Width="300"
                   Margin="0,0,0,30" />

            <!--검색바 컨테이너-->
            <Border Width="800"
                    Height="60"
                    BorderBrush="#3D6B8C"
                    BorderThickness="1"
                    CornerRadius="5">
                <Border.Background>
                    <SolidColorBrush Color="#1A223F" Opacity="0.85" />
                </Border.Background>

                <Grid>
                    <!--검색바 칸 나누기-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--지역 선택 드롭다운-->
                    <ComboBox Grid.Column="0"
                              Width="234"
                              Margin="20,0,0,0"
                              VerticalAlignment="Center"
                              FontSize="15"
                              materialDesign:HintAssist.Hint="Korea"
                              materialDesign:TextFieldAssist.UnderlineBrush="#CCD6F6"
                              BorderThickness="0"
                              Foreground="#CCD6F6">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="#1A223F" />
                                <Setter Property="Foreground" Value="#CCD6F6" />
                                <Setter Property="Height" Value="40" />
                                <Setter Property="Padding" Value="12,0,0,0" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3D6B8C" />
                                        <Setter Property="Foreground" Value="#1A223F"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="#1A223F" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>

                        <ComboBoxItem Content="Korea" />
                        <ComboBoxItem Content="North America" />
                        <ComboBoxItem Content="Europe West" />
                        <ComboBoxItem Content="Europe Nordic and East" />
                        <ComboBoxItem Content="Japan" />
                        <ComboBoxItem Content="Brazil" />
                    </ComboBox>

                    <Separator Grid.Column="1"
                               Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
                               Margin="8,8,8,8" />
                    
                    <!--검색바 텍스트 박스-->
                    <TextBox Grid.Column="2"
                             materialDesign:HintAssist.Hint="소환사명 #KR1"
                             materialDesign:TextFieldAssist.UnderlineBrush="#CCD6F6"
                             VerticalContentAlignment="Center"
                             FontSize="16"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#CCD6F6"
                             CaretBrush="#CCD6F6" />

                    <!--검색 버튼 -->
                    <Button Grid.Column="3"
                            Width="60"
                            Style="{StaticResource MaterialDesignToolButton}">
                        <materialDesign:PackIcon Kind="Magnify"
                                                 Width="24"
                                                 Height="24"
                                                 Foreground="#CCD6F6" />
                    </Button>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Window>